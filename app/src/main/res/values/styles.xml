<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarTheme">@style/MyApp.ActionBarTheme</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:textColorHint">@color/blueHint</item>
        <item name="colorControlNormal">@color/blueHint</item>
        <item name="colorControlActivated">@color/blueHint</item>
        <item name="colorControlHighlight">@color/blueHint</item>

    </style>

    <style name="SwitchStyle">
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
        <item name="android:titleTextStyle">@style/MyTitleTextStyle</item>
    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MyApp.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- THIS is where you can color the arrow! -->
        <item name="colorControlNormal">@android:color/white</item>
    </style>


    <style name="spinnerDropDownItemStyle" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@android:color/black</item>
        <item name="android:dividerHeight">10dp</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/ratingBarEmpty</item>
        <item name="colorControlActivated">@color/ratingBarFilled</item>
    </style>


    <style name="AlertDialogServerOverloaded" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:buttonBarButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:windowTitleStyle">@style/OverloadedDialogTitle</item>
    </style>

    <style name="OverloadedDialogTitle" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="PositiveButtonStyle">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
