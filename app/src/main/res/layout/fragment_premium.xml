<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:weightSum="2"
    tools:context="com.privatix.PremiumActivity$PlaceholderFragment">

    <ImageView
        android:id="@+id/iv_premium_images"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/iv_premium_images_margin_top"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:scaleType="centerInside" />


    <LinearLayout
        android:id="@+id/ll_premium_hints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_premium_images"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/ll_premium_hints_margin_top"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="123"
            android:textColor="@color/green_premium_title"
            android:textSize="@dimen/tv_title_green_text_size" />

        <TextView
            android:id="@+id/tv_title_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/tv_title_black_margin_left"
            android:text="123"
            android:textColor="@android:color/black"
            android:textSize="@dimen/tv_title_black_text_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_premium_hints"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/tv_message_margin_top"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/tv_message_text_size" />


</LinearLayout>
